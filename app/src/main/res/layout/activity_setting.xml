<?xml version="1.0" encoding="utf-8"?>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:voice="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.cctvjiatao.customview04.view.Voice
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        voice:colorFirst="#efefef"
        voice:colorSecond="#ff0000"
        voice:countItem="8"
        voice:gapItem="10dp"
        voice:imageCenter="@mipmap/ic_launcher"
        voice:ringWidth="20dp" />

    <com.cctvjiatao.customview04.view.Voice
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        voice:colorFirst="#dddddd"
        voice:colorSecond="#ff00ff"
        voice:countItem="10"
        voice:gapItem="10dp"
        voice:imageCenter="@mipmap/girl"
        voice:ringWidth="5dp" />
</LinearLayout>
